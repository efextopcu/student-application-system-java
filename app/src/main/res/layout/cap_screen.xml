<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorButtonNormal"
                android:visibility="visible"
                tools:context=".MainActivity">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/stock_photo_dark_empty_black_grey_paper"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <Button
                    android:id="@+id/nextButtonIntibak2"
                    android:layout_width="150dp"
                    android:layout_height="58dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:text="Geri"
                    app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
                    app:layout_constraintEnd_toStartOf="@+id/showDatePickerDialog"
                    app:layout_constraintHorizontal_bias="0.337"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="261dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="28dp"
                    android:text="Çap Başvurusu"
                    android:textAlignment="center"
                    android:textColor="#DFD5D5"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="74dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/_36_1362196_grey_gradient_gradient_grey_png"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar2"
                    android:layout_width="74dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/_36_1362196_grey_gradient_gradient_grey_png"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="330dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="28dp"
                    android:text="Lütfen gerekli belgeleri sisteme yükleyiniz."
                    android:textAlignment="center"
                    android:textColor="#DFD5D5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="183dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="84dp"
                    android:text="1. Transkript Belgesi"
                    android:textColor="#DFD5D5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/cap_transkript"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="258dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="8dp"
                    android:text="2. İkinci Anadal Taban Puanı ile Öğrencinin Aldığı Puanı Gösteren Belge"
                    android:textColor="#DFD5D5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/cap_puan"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="273dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="28dp"
                    android:text="Çift Anadal Geçiş Bölümünü Yazınız."
                    android:textColor="#DFD5D5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <ImageView
                    android:id="@+id/cap_transkript"
                    android:layout_width="35dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="40dp"
                    android:onClick="fileChooser"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:srcCompat="@android:drawable/ic_menu_upload" />

                <ImageView
                    android:id="@+id/cap_puan"
                    android:layout_width="35dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:onClick="fileChooser"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cap_transkript"
                    app:srcCompat="@android:drawable/ic_menu_upload" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="70dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/unnamed" />

                <Button
                    android:id="@+id/showDatePickerDialog"
                    android:layout_width="150dp"
                    android:layout_height="58dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@android:color/darker_gray"
                    android:onClick="setViewToComplete"
                    android:text="İLERİ"
                    app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/cap_faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="Bölüm"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="#F6F1F1"
                    android:textColorHint="#F8F2F2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>